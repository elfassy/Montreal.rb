<div class="call_to_action">
  <div class="row">
    <h1>The Montreal Ruby Community</h1>
    <p>Would you like to join the mailing list</p>
    <%= link_to "JOIN", "#", id: "mailing_list_button" %>
  </div>
</div>

<section id="next_event">
  <div class="container">
    <div class="row">
      <h2>Next Event</h2> 
      <div class="event">
        <%= link_to "Meetup", "#" %> at <%= link_to "Notman house", "#" %> on <br />Tuesday, October 12 at 6:00 pm
      </div>
    </div>
  </div>
</section>

<div class="container">
  <% @posts.each do |post| %>
    <div class="row">
      <h2><%= post.title %></h2>
      <small class="text-muted"><%= post.created_at.strftime "%d/%-m/%Y" %></small>
      <div class="content">
        <%= post.content %>
      </div>
    </div>
  <% end %>
</div>
